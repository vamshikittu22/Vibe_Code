# App Configuration
VITE_APP_NAME="AI Coding Platform"
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# API Configuration
VITE_API_BASE_URL=/api
VITE_API_TIMEOUT=30000

# Feature Flags
VITE_FEATURE_AUTH=true
VITE_FEATURE_AI_ASSIST=true
VITE_FEATURE_FILE_EXPLORER=true

# Editor Configuration
VITE_EDITOR_THEME=vs-dark
VITE_EDITOR_FONT_SIZE=14
VITE_EDITOR_TAB_SIZE=2
VITE_EDITOR_INSERT_SPACES=true
VITE_EDITOR_WORD_WRAP=on
VITE_EDITOR_MINIMAP_ENABLED=true

# UI Configuration
VITE_DEFAULT_THEME=dark
VITE_APP_LOGO_URL=/logo.svg
VITE_APP_FAVICON=/favicon.ico

# Analytics (if needed)
# VITE_GA_TRACKING_ID=UA-XXXXX-Y
# VITE_SENTRY_DSN=your-sentry-dsn

# NEVER expose sensitive information like API keys in the frontend .env file
# All sensitive configuration should be handled by the backend
